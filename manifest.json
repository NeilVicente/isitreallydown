{
  "name": "Is it really down?",
  "version": "1.0",
  "description": "An extension for checking if the site you're visiting is really down.",
  "permissions": ["storage", "webNavigation"],
  "background":  {
    "page": "background.html"
  },
  "options_page": "options.html",
  "page_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
